<form  action="/api/course" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="courseName">Course Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="courseName" value="" placeholder="Course name">
        </div>

        <div class="form-group">
            <label for="duration">Duration</label>
            <input type="text" name="duration" value="" placeholder="17">
        </div>

        <div class="form-group">
            <label for="fees">fees</label>
            <input type="text" name="fees" value="" placeholder="1700">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>